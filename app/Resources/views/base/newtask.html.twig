{% extends 'base.html.twig' %}

    
{% block title %}General Template of Daily Plan{% endblock %}
 
{% block stylesheets %}
    <!-- Bootstrap -->
    <link href="{{asset('styles/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{asset('styles/css/main.css')}}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
{% endblock %} 

{% block body %}
  <body>
  <div class="container">
    <div class="row">
      <h1>Новая задача</h1>
    </div> 
      <div class="row">
        <div class="col-md-3">
          <ul>
          	{% for item in menu %}
          		<li><a href="{{ path(item.link) }}">{{item.name}}</a></li>
          	{% endfor %} 
          </ul>
        </div>
      
        <div class="col-md-6">
        	{{form_start(form)}}
        		{{form_widget(form)}}
        	{{form_end(form)}}
        </div>
        <div class="col-md-3">3</div>
      </div>
      <div class="row">
        <h3>Footer</h3>
      </div> 
    </div>  

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{asset(')styles/js/bootstrap.min.js')}}"></script>
  </body>
 {% endblock %}  